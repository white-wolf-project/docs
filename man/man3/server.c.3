if (file_exists(pidfile))
{
    fp = fopen(pidfile, "r");
    fprintf(stdout, "[-] ragnarok is already running\n");
    getline(&pid_val, &len, fp);
    fprintf(stdout, "[i] PID = %s\r", pid_val);
    fclose(fp);
    exit(-1);
}

